pipeline{
    agent any

    stages{
        stage("checkout"){
            steps{
                sh "echo checkout successful"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage("build"){
            steps{
                sh "ls -ltr"
                sh "cd Integration && docker build . -t integration"
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}